<script>
  // Carousel functionality: native touch scrolling + nav buttons + autoplay
  function setupCarousels() {
    document.querySelectorAll('.carousel').forEach((carousel) => {
      const track = carousel.querySelector('.carousel-track');
      const prevBtn = carousel.querySelector('.carousel-nav-prev');
      const nextBtn = carousel.querySelector('.carousel-nav-next');

      if (!track || !prevBtn || !nextBtn) {
        return;
      }

      let userInteracting = false;
      let interactionTimeout = null;
      let autoTimer = null;

      const getStep = () => {
        const firstItem = track.querySelector('.carousel-item');
        if (!firstItem) {
          return 320;
        }

        const gap = parseFloat(getComputedStyle(track).gap || '0');
        return firstItem.getBoundingClientRect().width + gap;
      };

      const updateButtons = () => {
        const maxLeft = track.scrollWidth - track.clientWidth;
        const atStart = track.scrollLeft <= 2;
        const atEnd = track.scrollLeft >= maxLeft - 2;

        prevBtn.disabled = atStart;
        nextBtn.disabled = atEnd;
        prevBtn.style.opacity = atStart ? '0.35' : '1';
        nextBtn.style.opacity = atEnd ? '0.35' : '1';
      };

      const scrollByStep = (direction) => {
        track.scrollBy({
          left: direction * getStep(),
          behavior: 'smooth',
        });
      };

      const setInteracting = () => {
        userInteracting = true;
        clearTimeout(interactionTimeout);
        interactionTimeout = setTimeout(() => {
          userInteracting = false;
        }, 2500);
      };

      const stopAutoPlay = () => {
        if (autoTimer) {
          clearInterval(autoTimer);
          autoTimer = null;
        }
      };

      const startAutoPlay = () => {
        stopAutoPlay();
        autoTimer = setInterval(() => {
          if (userInteracting) {
            return;
          }

          const maxLeft = track.scrollWidth - track.clientWidth;
          const nearEnd = track.scrollLeft >= maxLeft - 4;

          if (nearEnd) {
            track.scrollTo({ left: 0, behavior: 'smooth' });
          } else {
            scrollByStep(1);
          }
        }, 4200);
      };

      prevBtn.addEventListener('click', () => {
        setInteracting();
        scrollByStep(-1);
      });

      nextBtn.addEventListener('click', () => {
        setInteracting();
        scrollByStep(1);
      });

      track.addEventListener('scroll', updateButtons, { passive: true });
      track.addEventListener('touchstart', setInteracting, { passive: true });
      track.addEventListener('pointerdown', setInteracting, { passive: true });

      carousel.addEventListener('mouseenter', stopAutoPlay);
      carousel.addEventListener('mouseleave', startAutoPlay);
      carousel.addEventListener('focusin', stopAutoPlay);
      carousel.addEventListener('focusout', startAutoPlay);

      updateButtons();
      startAutoPlay();
    });
  }

  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', setupCarousels);
  } else {
    setupCarousels();
  }
</script>
